{% block titulo %}
	<h1 class="mt-4">Recetas</h1>
{% endblock %}

{% block cabecera %}
	<div class="container">
		<br>

		<div class="container-flex">
			<div class="navbar navbar-expand-lg navbar-light bg-success">
				<a class="navbar-brand" href="#"></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">

						<li class="nav-item active">
							<a class="nav-link text-light" href="index.php?ope=listarAdmin&con=receta">Inicio</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" href="index.php?ope=anadir&con=receta">Añadir Recetas</a>
						</li>

						<li class="nav-item active">
							<a class="nav-link text-light" href="index.php?ope=infoGlobal&con=api">API</a>
						</li>

						<li class="nav-item">
							<a href="index.php?ope=listar&con=login" class="nav-link text-light">Salir</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	{% endblock %}

	{% block contenido %}
		<div class="card" style="width: 50rem; color:black">
			<div class="card-body">
				<h5 class="card-title" style=" text-align: center;">
					<u>{{ dat.NomRec }}</u>
				</h5>
				<p class="card-text">Ingrediente principal:
					{{ dat.IngredientePrincipal }}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">Tiempo de preparación:
					{{ dat.Tiempo }}
					min</li>
				<li class="list-group-item">Raciones:
					{{ dat.Raciones }}</li>
				<li class="list-group-item">Temporada:
					{{ dat.Temporada }}</li>
				<li class="list-group-item">Preparación:
					{{ dat.Metodo }}</li>
			</ul>
			<div class="card-body">
				<a href="index.php?ope=editar&con=receta&id={{ dat.idRec }}" class="btn btn-success stretched-link">EDITAR</a>
				<a href="index.php?ope=borrar&con=receta&id={{ dat.idRec }}" class="btn btn-danger stretched-link">Borrar</a>
			</div>
		</div>
	{% endblock %}
